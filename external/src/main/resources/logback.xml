<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--使用%red()将要变色的模式包起来-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>%d{yyyy-MM-dd HH:mm:ss} %green(%-5level) %C:%L-%m%n</Pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>